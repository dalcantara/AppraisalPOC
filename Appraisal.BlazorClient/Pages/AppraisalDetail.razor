@* *@
@* @page "/Appraisaldetail/{AppraisalId}" *@
@* @inherits AppraisalDetailBase *@
@* *@
@* <section class="Appraisal-detail"> *@
@*     <h1 class="page-title">Details for @Appraisal.Product.Title</h1> *@
@* *@
@*     @{ *@
@*         var leadingFormat = "00000"; *@
@*         //var a = Appraisal.AppraisalId.ToString("00000"); *@
@*     } *@
@* *@
@* *@
@*     <div class="col-12 row"> *@
@*         <div class="col-2"> *@
